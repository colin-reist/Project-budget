# ============================================
# Configuration Docker Production
# ============================================
# Copier dans .env pour utiliser avec Docker

# Environnement
COMPOSE_PROJECT_NAME=budget-tracker
DEBUG=False

# ============================================
# BACKEND (Django)
# ============================================
# ⚠️ Générer une clé sécurisée:
# python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=CHANGE_ME_TO_A_RANDOM_SECRET_KEY_MINIMUM_50_CHARS

ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# JWT Tokens
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# WebAuthn
WEBAUTHN_RP_ID=yourdomain.com
WEBAUTHN_RP_NAME=Budget Tracker
WEBAUTHN_ORIGIN=https://yourdomain.com

# ============================================
# BASE DE DONNÉES PostgreSQL
# ============================================
# ⚠️ Changer les identifiants!
POSTGRES_DB=budget_db
POSTGRES_USER=budget_user
POSTGRES_PASSWORD=CHANGE_ME_TO_A_VERY_SECURE_PASSWORD

# ============================================
# FRONTEND (Nuxt)
# ============================================
# Pointez vers le backend
NUXT_PUBLIC_API_BASE=https://yourdomain.com/api/v1
