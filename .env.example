# ======================
# GÉNÉRAL
# ======================
COMPOSE_PROJECT_NAME=budget-tracker
DEBUG=False

# ======================
# BACKEND (Django)
# ======================
# ⚠️ Générer avec: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=CHANGE_ME_TO_A_RANDOM_SECRET_KEY

ALLOWED_HOSTS=localhost,127.0.0.1,raspberrypi.local
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
JWT_ACCESS_TOKEN_LIFETIME=15  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # jours

# WebAuthn / Passkeys
WEBAUTHN_RP_ID=localhost  # Domaine (localhost en dev, yourdomain.com en prod)
WEBAUTHN_RP_NAME=Budget Tracker  # Nom affiché lors de l'enregistrement
WEBAUTHN_ORIGIN=http://localhost:3000  # URL complète du frontend

# ======================
# BASE DE DONNÉES
# ======================
POSTGRES_DB=budget_db
POSTGRES_USER=budget_user
# ⚠️ Changer ce mot de passe !
POSTGRES_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD
DATABASE_URL=postgres://budget_user:CHANGE_ME_TO_A_SECURE_PASSWORD@db:5432/budget_db

# ======================
# FRONTEND (Nuxt)
# ======================
NUXT_PUBLIC_API_BASE=http://localhost:8000/api/v1
